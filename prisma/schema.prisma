// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id String @id @default(uuid())
  username String @unique
  email String @unique
  password String
  createdAt DateTime @default(now())
  kaards card[] @relation("Card")
}

model card {
  cardId String @id @default(uuid())
  imageURL String
  title String
  details String
  author user @relation("Card", fields: [cardId], references: [id])
}